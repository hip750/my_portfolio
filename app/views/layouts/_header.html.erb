<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="header-container">
    <%= link_to "Medpod", root_path, id: "logo" %>
    <nav class="header-list">
      <ul class="nav navbar-nav navbar-right">
        <div class="dropdown-menu-right">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown">
            <i class="fas fa-bars fa-3x"></i>
          </a>
          <ul class="dropdown-menu">
            <li>
              <%= link_to root_path do %>
                <i class="fas fa-home fa-lg"></i> ホーム
              <% end %>
            </li>
            <li>
              <%= link_to about_path do %>
                <i class="fas fa-question fa-lg"></i> &nbsp;Medpodとは
              <% end %>
            </li>
            <% if user_signed_in? %>
              <li>
                <%= link_to recruits_path do %>
                  <i class="fa fa-search fa-lg"></i> 求人検索
                <% end %>
              </li>
              <li class="divider"></li>
              <li>
                <%= link_to user_path(current_user.id) do %>
                  <i class="fas fa-user fa-lg"></i> &nbsp;マイページ
                <% end %>
              </li>
              <li>
                <%= link_to edit_user_registration_path(@user) do %>
                  <i class="fas fa-user-edit fa-lg"></i> プロフィール編集
                <% end %>
              </li>
              <li>
                <%= link_to destroy_user_session_path, method: :delete do %>
                  <i class="fas fa-sign-out-alt fa-lg"></i> &nbsp;ログアウト
                <% end %>
              </li>
            <% else %>
              <li class="divider"></li>
              <li>
                <%= link_to new_user_registration_path do %>
                  <i class="fas fa-user-plus fa-lg"></i> サインアップ
                <% end %>
              </li>
              <li>
                <%= link_to new_user_session_path do %>
                  <i class="fas fa-sign-in-alt fa-lg"></i> ログイン
                <% end %>
              </li>
            <% end %>
          </ul>
        </li>
      </ul>
    </nav>
  </div>
</header>
