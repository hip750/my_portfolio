<% if user_signed_in? %>
  <% if recruit.liked_by?(current_user) %>
    <%= link_to recruit_likes_path(recruit.id), method: :delete, remote: true do %>
      <span>
        <% unless current_user?(recruit.user) %>
          &emsp;&emsp;&emsp;&emsp;&emsp;
        <% end %>
        <i class="fa fa-heart unlike-btn" aria-hidden="true"></i>
      </span>
    <% end %>
  <% else %>
    <%= link_to recruit_likes_path(recruit.id), method: :post, remote: true, class: "likes" do %>
      <span>
        <% unless current_user?(recruit.user) %>
          &emsp;&emsp;&emsp;&emsp;&emsp;
        <% end %>
        <i class="fa fa-heart like-btn" aria-hidden="true"></i>
      </span>
    <% end %>
  <% end %>
<% else %>
  <span>
    <i class="fa fa-heart unlike-btn" aria-hidden="true"></i>
  </span>
<% end %>
