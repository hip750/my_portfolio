
<section class="user_menu">
  <div class="user-icon">
    <p class="user-name"><%= @user.name %></p>
    <p><%= gravatar_for @user %></p>
  </div>
  <ul class="user-link">
    <li>
      <%= link_to edit_user_registration_path(@user) do %>
        <i class="fas fa-user-edit fa-lg"></i>
        <span>プロフィール編集</span>
      <% end %><br />
    </li>
    <li>
      <%= link_to new_recruit_path do %>
        <i class="fas fa-hospital fa-lg"></i>&nbsp;
        <span>求人情報の作成</span>
      <% end %><br />
    </li>
    <li>
      <%= link_to edit_recruit_path do %>
        <i class="fas fa-edit fa-lg"></i>
        <span>求人情報の編集</span>
      <% end %><br />
    </li>
    <li>
      <%= link_to recruits_path do %>
        <i class="fa fa-search fa-lg"></i>&nbsp;
        <span>求人情報を探す</span>
      <% end %><br />
    </li>
  </ul>
</section>

<section class="user-profile">
  <div class="name-title">
    <i class="fa fa-smile fa-lg"></i> ニックネーム
  </div>
  <p><%= @user.name %></p>

  <div class="full_name-title">
    <i class="fa fa-user fa-lg"></i> 名前
  </div>
  <p><span class="black">カナ：</span><%= @user.last_name_ruby %> <%= @user.first_name_ruby %></p>
  <p><span class="black">漢字：</span><%= @user.last_name %> <%= @user.first_name %></p>

  <div class="email-title">
    <i class="fa fa-envelope fa-lg"></i> メールアドレス
  </div>
  <p><%= @user.email %></p>

  <div class="gender-title">
    <i class="fas fa-venus-mars fa-lg"></i> 性別
  </div>
  <p><%= @user.gender %></p>

  <div class="birthday-title">
    <i class="fa fa-birthday-cake fa-lg"></i> 生年月日
  </div>
  <p><%= @user.birthday %></p>

  <div class="age-title">
    <i class="fa fa-sort-numeric-up fa-lg"></i> 年齢
  </div>
  <p><%= @user.age %>歳</p>

  <div class="user-address-title">
    <i class="fa fa-map-marker-alt fa-lg"></i> 住所
  </div>
  <p>〒<%= @user.postcode %></p>
  <p><%= @user.prefecture_name %><%= @user.city %><%= @user.street %></p>

  <div class="phone-number-title">
    <i class="fa fa-phone fa-lg"></i> 電話番号
  </div>
  <p><%= @user.phone_number %></p>

  <div class="license-title">
    <i class="fa fa-syringe fa-lg"></i> 所有資格
  </div>
  <p><%= @user.license %></p>

  <div class="career-title">
    <i class="fa fa-sticky-note fa-lg"></i> 経歴
  </div>
  <p><%= @user.career %></p>

  <div class="cwork-times-title">
    <i class="fa fa-sun fa-lg"></i> 勤務可能曜日・時間
  </div>
  <p><%= @user.work_times %></p>

  <div class="self-promotion-title">
    <i class="fa fa-address-card fa-lg"></i> 自己PR
  </div>
  <p><%= @user.self_promotion %></p>
</section>
