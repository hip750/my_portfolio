<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <div class="form-wrapper">
    <div class="form-container">
      <h1 class="form-title">ユーザー登録</h1>
      <form>
        <div class="form-item">
          <%= f.label :name %>
          <%= f.text_field :name %>
        </div>

        <div class="form-item">
          <%= f.label :email %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "medpot@exaple.com" %>
        </div>

        <div class="form-item">
          <%= f.label :password %>
          <% if @minimum_password_length %>
            <em>( <%= @minimum_password_length %>文字以上 )</em>
          <% end %>
          <%= f.password_field :password, autocomplete: "new-password", placeholder: "Password" %>
        </div>

        <div class="form-item">
          <%= f.label :password_confirmation %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Password confirmation" %>
        </div>

        <div class="submit-panel">
          <%= f.submit "登録 ", class: "submit-button" %>
        </div>

        <p class="or">───────── or ──────────</p>

        <div class="twitter-panel">
          <%- resource_class.omniauth_providers.each do |provider| %>
            <%= link_to omniauth_authorize_path(resource_name, provider), class: "twitter-button" do %>
              <i class="fa fa-twitter fa-lg"></i> Twitterで登録
            <% end %>
          <% end %>
        </div>
      </form>
      <div class="form-footer">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
<% end %>
