<% provide(:title, "Sign up") %>

<div class="container">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <div class="form-wrapper">
      <div class="form-container">
        <h1 class="form-title">ユーザー登録</h1>
        <%= render 'shared/error_messages', object: f.object %>
        <form>
          <div class="form-item">
            <%= f.label :name %>
            <%= f.text_field :name, autofocus: true, placeholder: "medpot" %>
          </div>

          <div class="form-item">
            <%= f.label :email %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "medpot@exaple.com" %>
          </div>

          <div class="form-item">
            <%= f.label :password %>
            <% if @minimum_password_length %>
              <em>( <%= @minimum_password_length %>文字以上 )</em>
            <% end %>
            <%= f.password_field :password, autocomplete: "new-password", placeholder: "Password" %>
          </div>

          <div class="form-item">
            <%= f.label :password_confirmation %>
            <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Password confirmation" %>
          </div>

          <div class="terms_of_service text-center">
            <%= link_to "利用規約", terms_of_service_path %> / 
            <%= link_to "プライバシーポリシー", privacy_policy_path %>
          </div>

          <div class="submit-panel">
            <%= f.submit "サインアップ", class: "submit-button" %>
          </div>

          <p class="or">───────── or ──────────</p>

          <div class="twitter-panel">
            <%- resource_class.omniauth_providers.each do |provider| %>
              <%= link_to omniauth_authorize_path(resource_name, provider), class: "twitter-button" do %>
                <i class="fab fa-twitter fa-lg"></i> Twitterでサインアップ
              <% end %>
            <% end %>
          </div>

          <p class="or">───────── or ──────────</p>

          <div class="guest-panel">
            <%= link_to "ゲストログイン", users_guest_sign_in_path, method: :post, class: "guest-button" %>
          </div>
        </form>
        <div class="form-footer">
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  <% end %>
</div>
